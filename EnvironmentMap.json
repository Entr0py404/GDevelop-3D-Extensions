    {
      "description": "Use this method if you want to convert an equirectangular panorama to the cubemap format.",
      "fullName": "Environment map (Equirectangular Panorama)",
      "functionType": "Action",
      "name": "Function",
      "private": true,
      "sentence": "Environment map (Equirectangular Panorama) _PARAM1_",
      "events": [
        {
          "type": "BuiltinCommonInstructions::JsCode",
          "inlineCode": [
            "const textureLoader = new THREE.TextureLoader();",
            "textureLoader.load(eventsFunctionContext.getArgument(\"Panorama\").substring(eventsFunctionContext.getArgument(\"Panorama\").lastIndexOf('\\\\') + 1), function (texture) {",
            "    const pmremGenerator = new THREE.PMREMGenerator(runtimeScene.getGame().getRenderer().getThreeRenderer());",
            "    const cubeRenderTarget = pmremGenerator.fromEquirectangular(texture);",
            "    const cubeMapTexture = cubeRenderTarget.texture; ",
            "    pmremGenerator.dispose();",
            "    runtimeScene.getLayer('').getRenderer().getThreeScene().environment = cubeMapTexture;",
            "});"
          ],
          "parameterObjects": "",
          "useStrict": true,
          "eventsSheetExpanded": true
        },
        {
          "disabled": true,
          "type": "BuiltinCommonInstructions::JsCode",
          "inlineCode": [
            "// Load equirectangular texture",
            "const textureLoader = new THREE.TextureLoader();",
            "textureLoader.load(eventsFunctionContext.getArgument(\"Panorama\").substring(eventsFunctionContext.getArgument(\"Panorama\").lastIndexOf('\\\\') + 1), function (texture) {",
            "   ",
            "    // Generate cubemap texture from equirectangular texture",
            "    const pmremGenerator = new THREE.PMREMGenerator(runtimeScene.getGame().getRenderer().getThreeRenderer());",
            "    const cubeRenderTarget = pmremGenerator.fromEquirectangular(texture);",
            "    const cubeMapTexture = cubeRenderTarget.texture; ",
            "",
            "    // Apply rotation to the cubemap texture by modifying UV coordinates",
            "    cubeMapTexture.mapping = THREE.CubeUVReflectionMapping;",
            "    cubeMapTexture.matrixAutoUpdate = false;",
            "    const m = new THREE.Matrix4().makeRotationX(Math.PI / 2); // Rotate by 90 degrees on the X-axis",
            "    cubeMapTexture.matrix = m;",
            "",
            "    // Dispose of PMREMGenerator",
            "    pmremGenerator.dispose();",
            "",
            "    // Apply the cubemap texture to scene environment",
            "    runtimeScene.getLayer('').getRenderer().getThreeScene().environment = cubeMapTexture;",
            "});"
          ],
          "parameterObjects": "",
          "useStrict": true,
          "eventsSheetExpanded": true
        }
      ],
      "parameters": [
        {
          "description": "Equirectangular Panorama",
          "name": "Panorama",
          "type": "imageResource"
        }
      ],
      "objectGroups": []
    },
